<body>
<div class="ui main text container a">
    <div class=" ui huge header">News</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <%for(var i=0;i<news.length;i++){%>
             
            <div class="item">
                <div class="image">
                    <img src="<%=news[i].img_url%>">
                </div>
                <div class="content">
                    <a class="header" href="/<%=news[i]._id %>"><%=news[i].heading%></a>
                    <div class="description">
                        <p><%=news[i].date%></p>
                    </div>
                    <div class="extra">
                        <form action="delete/<%=news[i].newsid%>/news" method="POST">
                            
                            <button type="Submit" class="ui red basic button">Delete</button>
                        </form>  
                    </div>
                    <div class="extra">
                        <a class="ui floated basic red button b" href="/edit/news[i].newsid/news">Edit
                            <i class="right chevron icon"></i></a>
                    </div>
                </div>
            </div>
            <%}%> 
        </div>
    </div>
    <form action="delete/news" method="POST">
                            
        <button type="Submit" class="ui red basic button">Delete ALL</button>
    </form>  
</div>
