<body>
 
<div class="ui main text container a">
    <div class=" ui huge header">Home Page TrustedBy Images</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <%for(var i=0;i<trusted.length;i++){%>
            <div class="item">
                <div class="image">
                    <img src="<%=trusted[i].img_url%>">
                </div>
                <div class="content">
                    
                    <div class="extra">
                        <form action="/<%=trusted[i].id%>/edittrusted" method="POST">
                            
                            <button type="Submit" class="ui red basic button">Remove</button>
                        </form>  
                    </div>
                </div>
            </div>
            <%}%> 
        </div>
    </div>
    <br>
    <form action="/delete/trusted" method="POST">
                            
        <button type="Submit" class="ui red basic button">Remove ALL Images</button>
    </form>
</div>
