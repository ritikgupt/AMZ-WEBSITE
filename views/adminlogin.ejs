 <script>

  $(function() {

    $("form[name='validatePassword-Form']").validate({
      rules: {

        password: {
          required: true,
          minlength: 5
        },
        cpassword: {
          required: true,
          minlength: 5
        }

      },
      messages: {
        password: "Invalid Password,5 Characters required",
        cpassword: "Invalid Confirm Password,5 Characters required"
      },
      submitHandler: function(form) {
        form.submit();
      }
    });

  });

